
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Logon</title>
    <link href="~/css/logon.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/js/logon.js"></script>
</head>
<body>
    <div class="body">
        
            <ul class="login">
                <li class="bannerLogin">
                    <img src="~/images/back.jpg" alt="" />
                <h1>登录页面</h1></li>
                <li class="Personal"><span class="titleName">账号：</span><input type="text" name="name" value="" placeholder="请输入账号" /></li>
                <li class="Personal"><span class="titleName">密码：</span><input type="password" name="name" value="" placeholder="请输入密码" /></li>
                <li class="Personal"><button class="loginBtn" type="button">登录</button><button class="regBtn" type="button">注册</button></li>
            </ul>
            @*注册信息*@
            <ul class="reg" style="display:block">
                <li class="bannerReg">
                    <img src="../images/back1.jpg" alt="" />
                <h1>注册页面</h1></li>
                <li class="Personal information"><span class="titleName">用户名：</span><input type="text" name="names" value="" placeholder="请输入昵称" /></li>
                <li class="Personal information"><span class="titleName">账号：</span><input type="text" name="UserName" value="" placeholder="请输入账号" /></li>
                <li class="Personal information"><span class="titleName">密码：</span><input type="password" name="password" value="" placeholder="请输入密码" /></li>
                <li class="Personal information">
                    <span class="titleName">性别：</span>
                    <select class="selectSex" id="sex">
                        <option value="M">男</option>
                        <option value="F">女</option>
                    </select>
                </li>
                <li class="Personal information"><span class="titleName">头像：</span><input type="file" name="image" accept=""></li>
                <li class="Personal information"><button class="loginBtn" type="button">注册提交</button></li>
            </ul>
    </div>
</body>
</html>
